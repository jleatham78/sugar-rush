

<!-- navigation bar code BEGINS -->

<body class="has-navbar-fixed-top">
    <nav class="navbar is-fixed-top" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="image is-128x128 pt-3 px-2">
                <img src="images/Logo2.png" alt="Sugar Rush Soda Shop Logo">
            </a>
        </div>

        <div id="navbar" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" onclick="location.href='/'">Home</a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-light" type="click" id="logout">
                            <strong>Log Out</strong>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <section class="hero mt-6">
        <div class="hero-body">
            <p class="title has-text-centered has-text-weight-bold is-underlined">
                Available Drink Choices
            </p>
            <div class="buttons are-medium is-centered columns mt-4">

                <button class="button is-link is-rounded column is-one-quarter" id="coke">Coke</button>
                <button class="button is-link is-rounded column is-one-quarter">Diet Coke</button>
                <button class="button is-link is-rounded column is-one-quarter">Coke Zero</button>
                <button class="button is-link is-rounded column is-one-quarter">Pepsi</button>
                <button class="button is-link is-rounded column is-one-quarter">Diet Pepsi</button>
                <button class="button is-link is-rounded column is-one-quarter">Dr. Pepper</button>
                <button class="button is-link is-rounded column is-one-quarter">Diet Dr. Pepper</button>
                <button class="button is-link is-rounded column is-one-quarter">Mtn Dew</button>
                <button class="button is-link is-rounded column is-one-quarter">Diet Mtn Dew</button>
                <button class="button is-link is-rounded column is-one-quarter">Sprite</button>
                <button class="button is-link is-rounded column is-one-quarter">Sprite Zero</button>
                <button class="button is-link is-rounded column is-one-quarter">7UP</button>
                <button class="button is-link is-rounded column is-one-quarter">Lemonade</button>
                <button class="button is-link is-rounded column is-one-quarter">Monster</button>
                <button class="button is-link is-rounded column is-one-quarter">Redbull</button>
                <button class="button is-link is-rounded column is-one-quarter">Rockstar</button>
                <button class="button is-link is-rounded column is-one-quarter">Kids</button>

            </div>
        </div>
    </section>

    <section class="section">
        <h1 class="title has-text-centered has-text-weight-bold">Available Drinks</h1>
        <h2 class="subtitle"></h2>
        <div class="columns">
            <div class="card column">
                <div class="card-content" id="container-text">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4">{{ drink_name }}</p>
                        </div>
                    </div>
                    <!--
                    <div class="content">
                        <p>Ingredients</p>
                        <ul>
                            <li>{{ add_ins }}</li>
                        </ul>
                        -->
                        <button type="submit" id="favorite" class="button"><span class="oi oi-heart"></span></button>
                    </div>
                </div>
            </div>
    </section>

        <section class="section is-medium">
        <h1 class="title has-text-centered has-text-weight-bold">Your Favorites</h1>
        {{#each favs}}
        <h2 class="subtitle">
            <li>
                {{ favs.drink_name }}
                </li>
        </h2>
        {{/each}}
    </section>
    

    <script src="/javascript/drinks.js"></script>

</body>